datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt  DateTime    @default(now())
  firstName  String?
  id         String      @id @default(cuid())
  lastName   String?
  listings   Listing[]
  password   String
  roles      Json
  trips      Trip[]
  updatedAt  DateTime    @updatedAt
  username   String      @unique
  whishlists Whishlist[]
}

model Listing {
  createdAt          DateTime    @default(now())
  description        String
  id                 String      @id @default(cuid())
  listingCreatedBy   User        @relation(fields: [listingCreatedById], references: [id])
  listingCreatedById String
  location           String
  locationData       Json
  locationType       String
  mapData            Json
  photos             Json
  placeAmeneties     Json
  placeSpace         Json
  placeType          String
  price              Float?
  tittle             String
  trips              Trip[]
  updatedAt          DateTime    @updatedAt
  whishlists         Whishlist[]
}

model Whishlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Trip {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  tripInfo  Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
